@model LanguageSchool.Models.Class

@{
    ViewData["Title"]="Criar Nova Turma";
}

<div class="container mt-4">   
    <h2> Criar Nova Turma</h2>
    <form asp-action="SalvarCriacao" method="post">
        <!--Campos da Turma -->
        <div class="form-group">
            <label for="Nome"> Nome da Turma </label>
            <input type="text" class="form-control" id="Nome" name="Name" placeholder="Digite o nome da turma" required />
        </div>
        <div class="form-group">
            <label for="Codigo"> Código </label>
            <input type="text" class="form-control" id="Codigo" name="Code" placeholder="Digite o código da turma" required />
        </div>

        <button type="submit" class="btn btn-success"> Salvar </button>
        <a href="/Turmas" class="btn btn-secondary"> Cancelar </a>
    </form>
</div>
